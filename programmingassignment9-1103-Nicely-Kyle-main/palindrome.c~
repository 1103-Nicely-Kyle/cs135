int stringLength(char array6[]);


int main() {
  char string1[LENGTH], string2[LENGTH];
  int stringLength1;
  _Bool sameWord, palindrome;
  char reverseStr[LENGTH], reverseStr2[LENGTH];
  
  printf("Enter your first word: ");
