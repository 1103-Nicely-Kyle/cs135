int stringLength(char array6[]) {
  int i = 0;
  for (i; array6[i] != '\0'; i++);

  return i-1;
}

_Bool isSameString(char array2[], char array3[]) {
 int  length = stringLength(array2);
 int length2 = stringLength(array3);
  for (int i = 0; i < length; i++) {
    if (length != length2)
      return 0;
    if (array3[i] != array2[i]) 
      return 0;
    else
      return 1;
  }
}

void reverseCopy(char sourceStr[], char destinStr[]) {
  int length = stringLength(sourceStr);
  int i = length;
  int n =0;
  while (sourceStr[i] >= 0) {
    destinStr[n] = sourceStr[i];
    i--;
    n++;
  }
}

_Bool isPalindrome(char array[]) {
  char reverseArray[LENGTH];
  int length;
  length = stringLength(array);
  reverseCopy(array, reverseArray);
  printf("%s\n",reverseArray);
  printf("%d\n",length);
  for (int i = 0; i < length; i++) {
    if (reverseArray[i] != array[i]) 
      return 0;
    else
      return 1;
  }
}
